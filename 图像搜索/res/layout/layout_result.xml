<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:background="@color/red"
            android:layout_height="54dp" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="91dp"
                android:layout_height="52dp"
                android:background="@drawable/return_btn"
                android:onClick="returnPhoto" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/imageView"
                android:text="@string/result_title"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:gravity="center_horizontal"
            android:background="@drawable/border_white"
             >

            <ImageView
                android:id="@+id/result_img"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/error" />

        </LinearLayout>
        
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                 >

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="130dp"
                    android:background="@drawable/border_gray"
                    android:orientation="vertical" >
<!-- android:background="@color/gray" -->
                    <!-- 产品名称 -->

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/productName"
                        android:textColor="@color/green"
                        android:gravity="right"
                        android:textSize="15sp" />

                    <!-- 品牌名称 -->

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/brandName"
                        android:textColor="@color/green"
                        android:gravity="right"
                        android:textSize="15sp" />

                    <!-- 公司名 -->

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/companyName"
                        android:textColor="@color/green"
                        android:gravity="right"
                        android:textSize="15sp" />

                    <!-- 出厂地 -->

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/originAddr"
                        android:textColor="@color/green"
                        android:gravity="right"
                        android:textSize="15sp" />

                    <!-- 出厂时间 -->

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/originTime"
                        android:textColor="@color/green"
                        android:gravity="right"
                        android:textSize="15sp" />
                    
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/border_white_word"
                    android:orientation="vertical" >
<!-- android:background="@color/white" -->
                    <!-- 产品名 -->

                    <TextView
                        android:id="@+id/result_productName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/productName"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <!-- 品牌名称 -->

                    <TextView
                        android:id="@+id/result_brandName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/brandName"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <!-- 公司名 -->

                    <TextView
                        android:id="@+id/result_companyName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/companyName"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <!-- 出厂地 -->

                    <TextView
                        android:id="@+id/result_originAddr"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/originAddr"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <!-- 出厂时间 -->

                    <TextView
                        android:id="@+id/result_originTime"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/originTime"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
            
    </LinearLayout>

</ScrollView>